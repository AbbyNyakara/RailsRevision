<p style="color: green"><%= notice %></p>

<div class="home__page">
  <h1> Code Help </ h1>
</div>

<div id="posts" class="posts">
  <% @posts.each do |post| %>
   
    <div class="post">
      <p>
        <strong>Title:</strong>
        <%= post.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= post.content %>
      </p>
      
      <p>
        <%= link_to "Show this post", post, class: "post__show" %>
      </p>
    
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
